<idea-plugin>

    <id>ru.nsu.semantic-diff</id>
    <name>semantic-diff</name>
    <vendor email="a.shadrina5@mail.ru" url="http://nsu.ru">YourCompany</vendor>

    <description><![CDATA[
    Semantic-based <strong>diff</strong> tool.<br>
    ]]></description>

    <change-notes><![CDATA[
    Release 0.0.1: Initial release.<br>
    ]]></change-notes>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <actions>
        <action id="SemanticDiffPlugin.UseDiff" class="ru.nsu.diff.UseDiffToolAction" text="Semantic diff..."
                description="Calculates diff of two files semantically">
            <add-to-group group-id="ToolsMenu" anchor="after" relative-to-action="ExternalToolsGroup"/>
        </action>
    </actions>

</idea-plugin>